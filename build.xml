<?xml version="1.0" encoding="UTF-8"?>
<project name="ProyectoAnt" default="main">
 
    <target name="init">
        <tstamp />
        <property name="name" value="DragonAlgoBall" />
        <property name="version" value="1.0.0" />
    </target>
 
    <target name="main" depends="init, compila, empaqueta, jugar" description="Compila y empaqueta">
        <echo message="Compilando y creando el archivo .jar" />
    </target>
 
	<target name="jugar" depends="empaqueta">
	        <java jar="${name}.jar" fork = "true" />
	    </target>
	
    <target name="compila" description="Compila">
        <javac srcdir="src" destdir="bin" />
    </target>
 
    <target name="empaqueta" depends="init, compila" description="Empaqueta">
        <jar jarfile="${name}.jar" basedir="bin" index="no" compress="yes">
            <manifest>
                <attribute name="Specification-Title" value="${name}" />
                <attribute name="Specification-Version" value="${version}" />
                <attribute name="Main-Class" value="vista.MenuJuego" />
            </manifest>
        </jar>
    </target>
 
</project>